<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91C6FF"
    tools:context=".ServiceFood">

    <CheckBox
        android:id="@+id/cb_breakfast"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Breakfast"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <CheckBox
        android:id="@+id/cb_lunch"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="Lunch"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cb_breakfast"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <CheckBox
        android:id="@+id/cb_dinner"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="24dp"
        android:text="Dinner"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cb_lunch"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:onClick="listBreakfast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bf" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="110dp"
        android:layout_height="95dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:onClick="listLunch"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lunch" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="21dp"
        android:onClick="listDinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dinner" />

    <TextView
        android:id="@+id/tv_food_and_drinks"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="FOOD AND DRINKS"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button7"
        android:layout_width="285dp"
        android:layout_height="48dp"
        android:layout_marginBottom="216dp"
        android:onClick="submitFood"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>