<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91C6FF"
    tools:context=".ServiceRequest">

    <TextView
        android:id="@+id/tv_customer_request"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="CUSTOMER REQUEST"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="189dp"
        android:layout_height="307dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/cb_towel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Towels"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_shower_equipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Shower Equipment"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_pillow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Extra Pillows"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_comforter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Extra Comforter"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Others"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_others_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter other request here"
            android:inputType="text"
            android:visibility="gone" />

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginBottom="176dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>